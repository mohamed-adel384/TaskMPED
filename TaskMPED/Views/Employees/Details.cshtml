@model Employee

@{
    ViewData["Title"] = Model;
}

<div class="row  mt-50-px">
    <div class="col-md-3">
        <img src="data:image/*;base64,@(Convert.ToBase64String(Model.Image))" class="img-thumbnail" alt="@Model.Image" />
    </div>
    <div class="col-md-7">
        <div class="">
            
            <h3>
                <i class="bi bi-person"></i>
                @Model.Name
            </h3><br />
            <span>
                <i class="bi bi-envelope-check"></i>
                @Model.Email
            </span>

        </div>
        <span class="text-muted mr-3">
            <i class="bi bi-calendar-week"></i>
            @Model.DateOfBirth
        </span>
        <span class="text-muted">
            <i class="bi bi-house-door-fill"></i>
            @Model.City.Name
        </span><br />
        <span class="text-muted">
            <i class="bi bi-person-workspace"></i>
            @Model.Department.Name
        </span>

        <p class="text-justify mt-3">
            <i class="bi bi-house-door"></i>
            @Model.Address
        </p>
    </div>
</div>